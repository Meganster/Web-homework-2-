upstream backend {
    server 127.0.0.1:8081;
}

proxy_cache_path /var/spool/nginx/ levels=1:2 keys_zone=my_cache:10m max_size=100m inactive=5m;
proxy_cache_valid 200 1m;

server {
        listen 127.0.0.1:80;
        server_name ask_vanyashkin.io www.ask_vanyashkin.io;
	
	gzip on;
	gzip_comp_level 9;
	gzip_disable "msie6";
	gzip_types text/plain text/css text/javascript application/javascript image/jpeg image/jpg image/png image/vnd.microsoft.icon;	

       location ~ \.\w\w\w?\w?$ {
                root /home/yury/ask_vanyashkin/static;
                


		expires 1M;
   		add_header Cache-Control private;
	}

	location *~/uploads/ {
                root /home/yury/ask_vanyashkin/uploads;
	}

	location / {
		proxy_set_header Host  	$host;
		proxy_set_header X-Real-IP $remote_addr;
		#proxy_cache my_cache;
		proxy_pass http://backend;  
	}

}
